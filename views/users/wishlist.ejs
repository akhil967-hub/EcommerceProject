    <!-- Shoping Cart Section Begin -->
    <section class="shoping-cart spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="shoping__cart__table">
                        <table>
                            <thead>
                                <tr>
                                    <th class="shoping__product">Product</th>
                                    <th>Rate</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                <% products.forEach((value,index)=>{%>
                                    <tr>
                                        <td class="shoping__cart__item">
                                            <img src="../uploads/<%=value.productId.image[0]%>" width="80px"
                                                height="80px" alt="">
                                            <h5>
                                               <%=value.productId.name%>
                                            </h5>
                                        </td>
                                        <td class="shoping__cart__price">
                                            â‚¹ <%=value.productId.price%>
                                        </td>
                                        <td class="shoping__cart__quantity">
                                            <div class="quantity">
                                                <div>
                                                    <button class="primary-btn"
                                                        onclick="wishToCart('<%=value.productId._id%>')">ADD TO
                                                        CART</button>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="shoping__cart__item__close">
                                            <div>
                                                <div>
                                                    <a href="/wishlistitemdelete?id=<%=value.productId._id%>"><span
                                                            class="icon_close" style="color: red;"></span></a>
                                                </div>
                                            </div>
                                        </td>

                                    </tr>
                                    <%})%>

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="shoping__cart__btns">
                        <a href="/" class="primary-btn cart-btn">CONTINUE SHOPPING</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Shoping Cart Section End -->

    <script>
        function wishToCart(id) {
            console.log(id)
            $.ajax({
                url: '/whishToCart',
                method: 'post',
                data: {
                    id: id
                },
                success: (response) => {
                    if (response.success) {
                        location.href = "/cart"
                    }
                },
                error: (xhr) => {
                    if (xhr.status === 401) {
                        window.location.href = '/login';
                    } else if (xhr.status === 400) {
                        const response = xhr.responseJSON;
                        swal.fire({
                            position: 'center',
                            icon: 'error',
                            title: response.message,
                            showConfirmButton: false,
                            timer: 2000
                        });
                    }
                }

            })
        }
    </script>

