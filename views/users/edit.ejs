 <!DOCTYPE html>
 <html lang="en">
 <head>
   <meta charset="UTF-8">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <title>Edit Profile</title>
   <style>
     /* Your existing styles remain unchanged */
     .warning {
       color: red;
       font-size: 0.8em;
     }
   </style>
   <script>
     document.addEventListener('DOMContentLoaded', function() {
       const form = document.querySelector('form');
       const nameInput = document.getElementById('name');
       const mobileInput = document.getElementById('mobile');
       const nameWarning = document.getElementById('nameWarning');
       const mobileWarning = document.getElementById('mobileWarning');
 
       form.addEventListener('submit', function(event) {
         let isValid = true;
 
         // Validate Name (no free spaces)
         if (nameInput.value.trim() === '') {
           nameWarning.innerText = 'Name should not be empty or contain only spaces.';
           isValid = false;
         } else {
           nameWarning.innerText = '';
         }
 
         // Validate Mobile Number (exactly 10 numbers)
         const mobileRegex = /^\d{10}$/;
         if (!mobileRegex.test(mobileInput.value)) {
           mobileWarning.innerText = 'Mobile Number should be exactly 10 digits.';
           isValid = false;
         } else {
           mobileWarning.innerText = '';
         }
 
         if (!isValid) {
           event.preventDefault();
         }
       });
 
       // Clear warnings on input change
       nameInput.addEventListener('input', function() {
         nameWarning.innerText = '';
       });
 
       mobileInput.addEventListener('input', function() {
         mobileWarning.innerText = '';
       });
     });
   </script>
 </head>
 <body>
 
   <div class="container">
     <h2 style="text-align: center;">Edit Profile</h2>
     <form action="/edit" method="POST">
       <!-- User Data Section -->
       <div class="form-group">
         <label for="name">Name</label>
         <input type="text" id="name" name="name" value="<%= userData.name %>" required>
         <div id="nameWarning" class="warning"></div>
       </div>
 
       <div class="form-group">
         <label for="mobile">Mobile Number</label>
         <input type="text" id="mobile" name="mobile" value="<%= userData.mobile %>" required>
         <div id="mobileWarning" class="warning"></div>
       </div>
 
       <button type="submit">Save Changes</button>
     </form>
 
     <a href="/profile">Back to Profile</a>
   </div>
 
 </body>
 </html>
 